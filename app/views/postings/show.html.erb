<%=  render 'shared/navbar' %>
<div class="container">
  <h1><%= @posting.name %></h1>
  <div class="image-grid">
    <img class="image-grid-row-2" src="https://images.unsplash.com/photo-1579584425555-c3ce17fd4351?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8MXx8c3VzaGl8ZW58MHx8MHx8&auto=format&fit=crop&w=800&q=60" alt="">
    <img src="https://images.unsplash.com/photo-1553621042-f6e147245754?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8N3x8c3VzaGl8ZW58MHx8MHx8&auto=format&fit=crop&w=800&q=60" alt="">
    <img src="https://images.unsplash.com/photo-1617196035303-964a45bbc9f4?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8MjF8fHN1c2hpfGVufDB8fDB8fA%3D%3D&auto=format&fit=crop&w=800&q=60" alt="">
  </div>
  <div class="card-price">
    <div class="left">
      <div class="show-desc">
        <h2><%= @posting.cuisine %></h2>
        <p><%= @posting.bio %></p>
      </div>
      <hr class=line>
    </div>
    <div class="right">
      <%= render 'shared/pricecardposting' %>
    </div>
  </div>
  <%# <%= link_to "Show all postings", postings_path %>

  <button class="btn-show"><%= link_to "Delete", posting_path(@posting),method: :delete, data: {confirm: "Are you sure?"} %></button>
  <button class="btn-show"><%= link_to "Edit", edit_posting_path(@posting) %></button>

</div>
