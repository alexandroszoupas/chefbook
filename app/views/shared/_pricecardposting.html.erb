<div class="card">
  <div class="card-body">
    <div class="check-form">
      <h5 class="card-title">$<%= @posting.price %></h5>
      <p class="card-text">Reviews</p>
    </div>
    <div class="cont-form">
      <%= simple_form_for [@posting, @booking] do |f| %>
            <%= f.input :occurs_on, as: :date, label: false, html5: true %>
            <%# <%= f.input :diners, label: false, placeholder: 'Select number of guests' %> %>
            <%= f.submit class: 'btn btn-flat'%>
          <% end %>
    </div>
    <div class="check-form-start">
      <ul style="list-style: none; padding-left: 0;">
        <li>$<%= @posting.price %></li>
        <li>Service fee</li>
        <li>Taxes</li>
      </ul>
      <ul style="list-style: none; padding-left: 0;">
        <li>$<%= @posting.price%></li>
        <li>$<%= 22 %></li>
        <li>$<%= 18 %></li>
      </ul>
    </div>
    <hr class=solid>
  </div>
    <div class="check-form-end">
    <div class="r"><h4>Total</h4></div>
    <div class="l"><h4>$<%= @posting.price + 22 + 18 %></h4></div>
    </div>
</div>
